<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>by.kanarski.booking.controllers.Controller</servlet-class>
        <load-on-startup>1</load-on-startup>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>10000</session-timeout>
    </session-config>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>by.kanarski.booking.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>requestEncoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>by.kanarski.booking.filters.LocalizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AuthorizationFilter</filter-name>
        <filter-class>by.kanarski.booking.filters.AuthorizationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>InitializationFilter</filter-name>
        <filter-class>by.kanarski.booking.filters.InitializationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>InitializationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!--<filter>-->
    <!--<filter-name>SecurityFilter</filter-name>-->
    <!--<filter-class>filters.SecurityFilter</filter-class>-->
    <!--</filter>-->
    <!--<filter-mapping>-->
    <!--<filter-name>SecurityFilter</filter-name>-->
    <!--<servlet-name>Controller</servlet-name>-->
    <!--</filter-mapping>-->

    <listener>
        <listener-class>by.kanarski.booking.listeners.request.LocaleListener</listener-class>
    </listener>
    <listener>
        <listener-class>by.kanarski.booking.listeners.request.ThreadLocalListener</listener-class>
    </listener>

    <error-page>
        <location>/WEB-INF/assets/jsp/error/error.jsp</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>/WEB-INF/assets/jsp/user/index.jsp</welcome-file>
    </welcome-file-list>


</web-app>