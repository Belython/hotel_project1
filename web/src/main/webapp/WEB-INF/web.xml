    <!--<filter-name>SecurityFilter</filter-name>-->
    <!--<filter-class>filters.SecurityFilter</filter-class>-->
    <!--</filter>-->
    <!--<filter-mapping>-->
    <!--<filter-name>SecurityFilter</filter-name>-->
    <!--<servlet-name>Controller</servlet-name>-->
    <!--</filter-mapping>-->

    <!--<listener>-->
        <!--<listener-class>by.kanarski.booking.listeners.LocaleListener</listener-class>-->
    <!--</listener>-->

    <error-page>
        <hotelLocation>/WEB-INF/assets/pages/error/error.jsp</hotelLocation>
    </error-page>

    <welcome-file-list>
        <welcome-file>assets/pages/index.jsp</welcome-file>
    </welcome-file-list>


</web-app>